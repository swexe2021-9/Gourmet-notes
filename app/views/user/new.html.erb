<%= image_tag "logo.png" %><br>

<% if @user.errors.present? %>
<h3> エラーがあります</h3>
<ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
</ul>
<% end %>


<%= form_for @user, url: {action: :create} do |f| %>
  <%= f.label :email, 'email' %> 
  <%= f.text_field :email %> 
  <%= f.label :pass, 'pass' %> 
  <%= f.password_field :pass %> 
  <%= f.label :belong, 'belong' %> 
  <%= f.text_field :belong %> 
  <%= f.submit '登録' %>
<% end %>