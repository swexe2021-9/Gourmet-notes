<% if flash[:notice] %>
   <%= flash[:notice] %>
<% end %>

<%= image_tag "logo.png" %><br>

<div class="box">
    <p>ようこそ！Gourmet notesへ！</p>
    
    <%= form_tag '/top/login', method: :post do %>
      <p><%= label_tag :email, 'メールアドレス' %>
      <%= text_field_tag :email %></p>
      <p><%= label_tag :pass, 'パスワード' %>
      <%= password_field_tag :pass %></p>
      <%= submit_tag 'ログイン' %>
    <% end %>
    <br/>
</div>

<p>
    <a><button class="logout"><%= link_to 'ユーザー一覧', '/user' %></button></a>
</p>
