<%= form_with model: @article, url: {action: :create} do |f| %>
  <p>
  <%= f.hidden_field :store_id, :value => @store.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  </p>
  <p><%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %></p>
  <p>店舗名:<%= @store.name %></p>
  <p>住所:<%= @store.address %></p>
  <p><%= f.label :intro, 'お店の紹介' %>
  <%= f.text_area :intro %></p>
  <p><%= f.label :kodawari, 'こだわり' %>
  <%= f.text_area :kodawari %></p>
  <p><%= f.label :mood, '雰囲気' %>
  <%= f.text_area :mood %></p>
  <p><%= f.label :review, 'レビュー' %>
  <%= f.text_area :review %></p>
  <p><%= f.submit '作成する' %></p>
<% end %>
